generator client {
  provider = "prisma-client-js"
  // output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                       Int      @id @default(autoincrement())
  name                     String?
  email                    String   @unique
  password                 String?
  phone                    String?  @unique
  gender                   String?
  isStudent                Boolean  @default(true)
  age                      Int?
  field                    String?
  hobbies                  String?
  hasAnsweredQuestionnaire Boolean  @default(false)
  recalculateProgress      Boolean  @default(false)
  createdAt                DateTime @default(now())
  updatedAt                DateTime @updatedAt

  chats         Chat[]
  notes         Note[]
  schedules     Schedule[]
  questionnaire Questionnaire?
  userProgress  UserProgress[]
}

model Chat {
  id        Int      @id @default(autoincrement())
  message   String
  answer    String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  userId   Int 
  user     User      @relation(fields: [userId], references: [id])
}

model Note {
  id        Int      @id @default(autoincrement())
  date      DateTime
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  userId Int
  user   User       @relation(fields: [userId], references: [id])
  items  NoteItem[]
}

model NoteItem {
  id        Int      @id @default(autoincrement())
  content   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  noteId Int
  note   Note @relation(fields: [noteId], references: [id])
}

model Schedule {
  id        Int      @id @default(autoincrement())
  date      DateTime
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  userId Int
  user   User           @relation(fields: [userId], references: [id])
  items  ScheduleItem[]
}

model ScheduleItem {
  id        Int      @id @default(autoincrement())
  desc      String
  time      DateTime
  looping   Looping?
  category  Category
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  scheduleId Int
  schedule   Schedule @relation(fields: [scheduleId], references: [id])
}

model Questionnaire {
  id        Int                   @id @default(autoincrement())
  answer    QuestionnaireAnswer[]
  createdAt DateTime              @default(now())
  updatedAt DateTime              @updatedAt

  userId Int  @unique
  user   User @relation(fields: [userId], references: [id])
}

model UserProgress {
  id        Int      @id @default(autoincrement())
  date      DateTime @default(now())
  score     Int
  summary   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  userId Int
  user   User @relation(fields: [userId], references: [id])
  recommendations Recommendation[]
  dimensionalScores DimensionalScore[]

  @@index([date])
  @@index([userId])
}

model Recommendation {
  id          Int      @id @default(autoincrement())
  priority    String
  title       String
  description String
  checked     Boolean  @default(false)

  userProgressId  Int
  userProgress    UserProgress @relation(fields: [userProgressId], references: [id])
}

model DimensionalScore {
  id               Int      @id @default(autoincrement())
  dimension       String
  score           Int
  analysis        String

  userProgressId  Int
  userProgress    UserProgress @relation(fields: [userProgressId], references: [id])
}

enum Looping {
  EVERYDAY @map("everyday")
  WEEKDAYS @map("weekdays")
  WEEKENDS @map("weekends")
}

enum Category {
  PERSONAL_TIME    @map("personal_time")
  WORK_ACTIVITY    @map("work_activity")
  SELF_DEVELOPMENT @map("self_development")
}

enum QuestionnaireAnswer {
  SANGAT_SETUJU       @map("sangat_setuju")
  KURANG_SETUJU       @map("kurang_setuju")
  NETRAL              @map("netral")
  CUKUP_SETUJU        @map("cukup_setuju")
  SANGAT_TIDAK_SETUJU @map("sangat_tidak_setuju")
}
